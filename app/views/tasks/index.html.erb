<h1>My Tasks :</h1>
<i class="fas fa-trash"></i>
<i class="fas fa-trash-alt"></i>
<i class="fas fa-ad"></i>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fas fa-trash"></i>
        <% end %>
    </li>
  <% end %>
</ul>



<%= link_to "Add a new task", new_task_path %>